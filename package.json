{
  "name": "api.sos.macrocephal.cloud",
  "version": "1.0.0",
  "main": "src/index.ts",
  "description": "Broadcast you need help, to willing people!",
  "author": "Salathiel Genese <salathiel@genese.name>",
  "license": "MIT",
  "scripts": {
    "serve": "env-cmd --silent node --enable-source-maps --trace-warnings dist/*.js",
    "test:watch": "nodemon --watch spec --watch src --exec 'yarpm run test'",
    "test": "env-cmd --silent jasmine-ts --project spec/tsconfig.json",
    "start:watch": "nodemon --exec 'yarpm start'",
    "start": "yarpm run build && yarpm run serve",
    "build": "yarpm run lint && webpack",
    "lint": "tsc --noEmit",
    "jasmine-ts": "jasmine-ts",
    "env-cmd": "env-cmd",
    "webpack": "webpack",
    "yarpm": "yarpm",
    "tsc": "tsc"
  },
  "nodemonConfig": {
    "ext": "ts",
    "signal": "SIGINT",
    "ignore": [
      "node_modules/*",
      ".idea/*",
      ".git/*"
    ],
    "watch": [
      "src/*"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@squall.io/types": "^0.0.9",
    "@types/boom": "^7.3.1",
    "@types/debug": "^4.1.7",
    "@types/faker": "^5.5.8",
    "@types/hapi__hapi": "^20.0.9",
    "@types/hapi__jwt": "^2.0.1",
    "@types/ioredis": "^4.26.7",
    "@types/jasmine": "^3.8.2",
    "@types/uuid": "^8.3.1",
    "babel-loader": "^8.2.2",
    "env-cmd": "^10.1.0",
    "faker": "^5.5.3",
    "jasmine": "^3.8.0",
    "jasmine-ts": "^0.4.0",
    "nodemon": "^2.0.12",
    "ts-node": "^10.2.0",
    "tslib": "^2.3.1",
    "typescript": "^4.3.5",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0",
    "webpack-node-externals": "^3.0.0",
    "yarpm": "^1.1.1"
  },
  "dependencies": {
    "@hapi/hapi": "^20.1.5",
    "@hapi/inert": "^6.0.3",
    "@hapi/jwt": "^2.1.0",
    "@hapi/vision": "^6.1.0",
    "@types/hapi__inert": "^5.2.3",
    "@types/hapi__vision": "^5.5.3",
    "boom": "^7.3.0",
    "debug": "^4.3.2",
    "firebase-admin": "^9.11.1",
    "hapi-swagger": "^14.2.4",
    "ioredis": "^4.27.8",
    "joi": "^17.4.2",
    "uuid": "^8.3.2"
  }
}
